{% extends "base.html.twig" %}

{% block title %}Vyber hráče{% endblock %}

{% block body %}

    <h1>Hráči</h1>

    <table class="table">
        <tr>
            <th>Jméno</th>
            <th>Akce</th>
        </tr>

        {% for player in players %}
        <tr>
            <td>{{ player.name }}</td>
            <td><a class="btn btn-primary btn-sm" href="">Vybrat</a></td>
        </tr>
        {% endfor %}
    </table>

    <div class="card">
        <div class="card-body">
            {{ form(addPlayerForm) }}
        </div>
    </div>



{% endblock %}